generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer{
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  email   String   @unique
  phone   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  username String @unique
  password String
  firstname String
  lastname String
  phone String @unique
  dob DateTime
  gender Gender
  image String
  role Role  @default(ATTENDANT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shops Shop[]
}

model Shop{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  location String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  adminId String @db.ObjectId
  admin User  @relation(fields: [adminId],references: [id])
  attendantIds String[] @db.ObjectId
}

enum Gender{
  MALE
  FEMALE
}

enum Role{
  ATTENDANT
  ADMIN
}